<UserControl x:Class="EpicProto.IndexArticle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:epic="clr-namespace:EpicProto"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel>
        <TextBlock Name="ArticleTitle" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" />
        <ItemsControl Name="ArticleContents" ItemsSource="{Binding Path=.}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Heading}" Margin="10,0,0,0" FontWeight="Bold" FontSize="22" />
                        <TextBlock Text="{Binding Path=Text}" Margin="20,0,20,0"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
